@model teach.todo.mvc.Models.TodoItem

<h2>Add Todo</h2>

<form asp-action="Create" method="post">
    <div>
        <label>Title</label>
        <input asp-for="Title" />
    </div>
    <div>
        <label>Is Complete</label>
        <input asp-for="IsComplete" type="checkbox" />
    </div>
    <button type="submit">Save</button>
</form>
